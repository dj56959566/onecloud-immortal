# TARGET
CONFIG_TARGET_rootfs_squashfs=y
CONFIG_TARGET_KERNEL_PARTSIZE=16
CONFIG_TARGET_ROOTFS_PARTSIZE=512
CONFIG_TARGET_arm_cortex-a7=y
CONFIG_TARGET_rockchip=y

# Enable generic ARMv7 profile (可能需调整)
CONFIG_TARGET_ARCH_PACKAGES="armv7l"

# Packages: 只保留你需要的最小集合 — 插件将在 feeds 安装
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_openclash=y

# core packages
CONFIG_PACKAGE_openssh-server=y
CONFIG_PACKAGE_dropbear=y
# 文件传输（可选）
CONFIG_PACKAGE_luci-app-filetransfer=y
# 网页终端
CONFIG_PACKAGE_luci-app-webterminal=y
# Docker 与相关
# 注意：docker-ce 在 openwrt/immortalwrt 下可能使用 docker dockerd 或 containerd 实现
CONFIG_PACKAGE_luci-app-dockerman=y
# netdata
CONFIG_PACKAGE_luci-app-netdata=y

# END
